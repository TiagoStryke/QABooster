{
	"name": "qabooster",
	"version": "1.1.0",
	"description": "QA Testing Screenshot Tool with image editing and PDF generation",
	"main": "dist/main.js",
	"scripts": {
		"start": "concurrently \"npm run dev\" \"npm run electron:dev\"",
		"start:debug": "concurrently \"npm run dev\" \"npm run electron:debug\"",
		"build": "npm run build:renderer && npm run build:main && npm run copy:assets",
		"build:renderer": "vite build",
		"build:main": "tsc -p tsconfig.main.json",
		"build:watch": "concurrently \"tsc -p tsconfig.main.json --watch\" \"npm run watch:assets\"",
		"copy:assets": "mkdir -p dist/area-selector dist/assets && cp -r electron/area-selector/* dist/area-selector/ && cp -r electron/assets/* dist/assets/",
		"watch:assets": "nodemon --watch electron/area-selector --watch electron/assets --exec \"npm run copy:assets\"",
		"electron:dev": "wait-on http://localhost:3000 dist/main.js && cross-env NODE_ENV=development electron .",
		"electron:debug": "wait-on http://localhost:3000 dist/main.js && cross-env NODE_ENV=development DEVTOOLS=true electron .",
		"dev": "concurrently \"vite\" \"npm run build:watch\"",
		"package": "npm run build && electron-builder",
		"test": "vitest",
		"test:ui": "vitest --ui",
		"test:run": "vitest run",
		"test:coverage": "vitest run --coverage"
	},
	"keywords": [
		"electron",
		"react",
		"typescript",
		"qa",
		"testing",
		"screenshots"
	],
	"author": "",
	"license": "MIT",
	"devDependencies": {
		"@testing-library/jest-dom": "^6.9.1",
		"@testing-library/react": "^16.3.2",
		"@testing-library/user-event": "^14.6.1",
		"@types/fabric": "^5.3.11",
		"@types/node": "^20.10.6",
		"@types/prop-types": "^15.7.15",
		"@types/react": "^18.2.46",
		"@types/react-dom": "^18.2.18",
		"@vitejs/plugin-react": "^4.2.1",
		"@vitest/ui": "^4.0.18",
		"autoprefixer": "^10.4.16",
		"concurrently": "^8.2.2",
		"cross-env": "^10.1.0",
		"electron": "^28.1.0",
		"electron-builder": "^24.9.1",
		"happy-dom": "^20.4.0",
		"jsdom": "^24.1.3",
		"nodemon": "^3.1.11",
		"postcss": "^8.4.32",
		"tailwindcss": "^3.4.0",
		"typescript": "^5.3.3",
		"vite": "^5.0.10",
		"vitest": "^4.0.18",
		"wait-on": "^7.2.0"
	},
	"dependencies": {
		"electron-squirrel-startup": "^1.0.0",
		"fabric": "^5.3.0",
		"jspdf": "^2.5.1",
		"react": "^18.2.0",
		"react-dnd": "^16.0.1",
		"react-dnd-html5-backend": "^16.0.1",
		"react-dom": "^18.2.0"
	},
	"build": {
		"appId": "com.qabooster.app",
		"productName": "QABooster",
		"mac": {
			"category": "public.app-category.developer-tools",
			"target": [
				"dmg",
				"zip"
			]
		},
		"files": [
			"dist/**/*",
			"package.json"
		],
		"directories": {
			"output": "release"
		}
	}
}
