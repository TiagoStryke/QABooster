{
	"name": "qabooster",
	"version": "1.0.0",
	"description": "QA Testing Screenshot Tool with image editing and PDF generation",
	"main": "dist/main.js",
	"scripts": {
		"start": "concurrently \"npm run dev\" \"npm run electron:dev\"",
		"build": "npm run build:renderer && npm run build:main",
		"build:renderer": "vite build",
		"build:main": "tsc -p tsconfig.main.json",
		"build:watch": "tsc -p tsconfig.main.json --watch",
		"electron:dev": "wait-on http://localhost:3000 dist/main.js && cross-env NODE_ENV=development electron .",
		"dev": "concurrently \"vite\" \"npm run build:watch\"",
		"package": "npm run build && electron-builder"
	},
	"keywords": [
		"electron",
		"react",
		"typescript",
		"qa",
		"testing",
		"screenshots"
	],
	"author": "",
	"license": "MIT",
	"devDependencies": {
		"@types/fabric": "^5.3.11",
		"@types/node": "^20.10.6",
		"@types/prop-types": "^15.7.15",
		"@types/react": "^18.2.46",
		"@types/react-dom": "^18.2.18",
		"@vitejs/plugin-react": "^4.2.1",
		"autoprefixer": "^10.4.16",
		"concurrently": "^8.2.2",
		"cross-env": "^10.1.0",
		"electron": "^28.1.0",
		"electron-builder": "^24.9.1",
		"postcss": "^8.4.32",
		"tailwindcss": "^3.4.0",
		"typescript": "^5.3.3",
		"vite": "^5.0.10",
		"wait-on": "^7.2.0"
	},
	"dependencies": {
		"electron-squirrel-startup": "^1.0.0",
		"fabric": "^5.3.0",
		"jspdf": "^2.5.1",
		"react": "^18.2.0",
		"react-dnd": "^16.0.1",
		"react-dnd-html5-backend": "^16.0.1",
		"react-dom": "^18.2.0"
	},
	"build": {
		"appId": "com.qabooster.app",
		"productName": "QABooster",
		"mac": {
			"category": "public.app-category.developer-tools",
			"target": [
				"dmg",
				"zip"
			]
		},
		"files": [
			"dist/**/*",
			"package.json"
		],
		"directories": {
			"output": "release"
		}
	}
}
